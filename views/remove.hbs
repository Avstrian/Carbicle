<h1>Delete Listing</h1>

<div class="form">
  {{#with car}}
  <form action="/remove/{{id}}" method="POST">
    <label for="name">Name</label>
    <input type="text" id="name" name="name" value="{{name}}" disabled>
    <label for="name">Description</label>
    <textarea id="name" name="description" disabled>{{description}}</textarea>
    <label for="image">ImageUrl</label>
    <input type="text" id="image" name="imageUrl" disabled value="{{imageUrl}}">
    <label for="price">Price</label>
    <input type="number" id="price" name="price" disabled value="{{price}}">
    <input type="submit" value="Confirm Delete">
  </form>
  {{/with}}
</div>